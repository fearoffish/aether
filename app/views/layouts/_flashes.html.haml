- unless flash.empty?
  %table( border="0" width="100%" cellpadding="0" cellspacing="0" )
  - flash.each do |key, value|
    #message-#{key}
      %table( border="0" width="100%" cellpadding="0" cellspacing="0")
        %tr
          %td.#{key}-left
            #{message}
          %td.#{key}-right
            = link_to image_url(asset_path("table/icon_close_#{key}.gif")), "", :class => "close-#{key}"
            <a class="close-#{key}">
            <img src="#{asset_path "table/icon_close_#{key}.gif"}" alt="" />
            </a>